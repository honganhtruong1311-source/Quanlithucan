<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="12dp"
    android:layout_margin="8dp"
    android:elevation="3dp">

    <!-- Ngày -->
    <TextView
        android:id="@+id/txtNgay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ngày: 6-10-2025"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginBottom="8dp" />

    <!-- Bữa sáng -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="4dp">

        <TextView
            android:id="@+id/txtSang"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sáng: (chưa có)"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/btnSuaSang"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_edit"
            android:background="?android:selectableItemBackgroundBorderless"
            android:contentDescription="Sửa" />

        <ImageButton
            android:id="@+id/btnXoaSang"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_delete"
            android:background="?android:selectableItemBackgroundBorderless"
            android:contentDescription="Xóa" />
    </LinearLayout>

    <!-- Bữa trưa -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="4dp">

        <TextView
            android:id="@+id/txtTrua"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Trưa: (chưa có)"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/btnSuaTrua"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_edit"
            android:background="?android:selectableItemBackgroundBorderless"
            android:contentDescription="Sửa" />

        <ImageButton
            android:id="@+id/btnXoaTrua"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_delete"
            android:background="?android:selectableItemBackgroundBorderless"
            android:contentDescription="Xóa" />
    </LinearLayout>

    <!-- Bữa tối -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/txtToi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tối: (chưa có)"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/btnSuaToi"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_edit"
            android:background="?android:selectableItemBackgroundBorderless"
            android:contentDescription="Sửa" />

        <ImageButton
            android:id="@+id/btnXoaToi"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_delete"
            android:background="?android:selectableItemBackgroundBorderless"
            android:contentDescription="Xóa" />
    </LinearLayout>

    <!-- Tổng calo -->
    <TextView
        android:id="@+id/txtTongCalo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tổng: 0 kcal"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="16sp"
        android:gravity="end"
        android:layout_marginTop="4dp" />
</LinearLayout>
