<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Tiêu đề -->
        <TextView
            android:id="@+id/txtTieuDeThem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thêm Thức Ăn Trong Ngày"
            android:textAlignment="center"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Bữa sáng -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🍳 Bữa sáng:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/edtSang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập món ăn buổi sáng"
            android:inputType="text"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/edtCaloSang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập calo bữa sáng"
            android:inputType="number"
            android:layout_marginBottom="16dp" />

        <!-- Bữa trưa -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🍱 Bữa trưa:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/edtTrua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập món ăn buổi trưa"
            android:inputType="text"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/edtCaloTrua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập calo bữa trưa"
            android:inputType="number"
            android:layout_marginBottom="16dp" />

        <!-- Bữa tối -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🍲 Bữa tối:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/edtToi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập món ăn buổi tối"
            android:inputType="text"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/edtCaloToi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập calo bữa tối"
            android:inputType="number"
            android:layout_marginBottom="24dp" />

        <!-- Nút lưu -->
        <Button
            android:id="@+id/btnLuuThucAn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lưu"
            android:textAllCaps="false"
            android:backgroundTint="@android:color/holo_green_dark"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:padding="8dp" />

    </LinearLayout>
</ScrollView>
