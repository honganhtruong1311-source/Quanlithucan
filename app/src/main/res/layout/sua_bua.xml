    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/edtMon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên món ăn" />

    <EditText
        android:id="@+id/edtCalo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Calo"
        android:inputType="number"/>
</LinearLayout>
